{
  "name": "Polybius",
  "version": "1.0",
  "description": "",
  "permissions": [
    "storage",
    "downloads"
  ],
  "content_security_policy": "script-src 'self'; default-src 'self'",
  "background": {
    "scripts": [
      "dist/Polybius.js"
    ],
    "persistent": false
  },
  "options_page": "dist/options.html",
  "page_action": {
    "default_popup": "dist/popup.html",
    "default_icon": {
      "16": "src/img/icon16.png",
      "32": "src/img/icon32.png",
      "64": "src/img/icon64.png",
      "128": "src/img/icon128.png"
    }
  },
  "icons": {
    "16": "src/img/icon16.png",
    "32": "src/img/icon32.png",
    "48": "src/img/icon64.png",
    "128": "src/img/icon128.png"
  },
  "manifest_version": 2
}